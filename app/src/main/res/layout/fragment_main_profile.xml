<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/profile_container"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.luci.roamappdevelopment.MainActivity$PlaceholderFragment">
            <android.support.v7.widget.CardView
                android:id="@+id/cardViewProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="223dp"
        android:layout_height="31dp"
        android:id="@+id/userprofilename"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-28dp"
        app:layout_constraintLeft_toRightOf="@+id/cardViewProfile"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="8dp" />
    <TextView
        android:textSize="15dp"
        android:textColor="@color/grey"
        android:layout_width="223dp"
        android:layout_height="31dp"
        android:id="@+id/userprofileemail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        app:layout_constraintLeft_toRightOf="@+id/cardViewProfile"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="8dp" />
    <TextView
        android:layout_width="163dp"
        android:layout_height="16dp"
        android:text="profile description"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="87dp" />
    <EditText
        android:id="@+id/userprofiledescription"
        android:layout_width="wrap_content"
        android:hint="Write a few words about yourself"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:maxWidth="350dp"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="111dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
